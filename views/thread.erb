<form action="/reply" enctype="multipart/form-data" method="POST">
    <input type="text-area" name="name" value="Anonymous" />
    <br>
    <input type="text-area" name="subject" />
    <br>
    <textarea name="content" rows="6" cols="50" />Post...</textarea>
    <input type="hidden" name="board" value=" <%= @bid %>" />
    <input type="hidden" name="op" value="<%= @op %>" />
    <br>
    <input name="file" type="file" />
    <br>
    <input type="submit" name="submit" />
</form>

<% if @posts != nil then %>
<% @posts.each do |post| %>
    <div id="post">
        <div id="info">
            <a href="#<%= post[:id] %>"><%= post[:id] %></a> <%= post[:created_at] %>
        </div>
        <% if post.media != nil %>
        <div id="media">
            <% imgpiece = post.media.split('.') %>
            <a href='<%= post.media %>'><img src="<%= imgpiece[0]+'.thumb.'+imgpiece[1] %>"/></a>
        </div>
        <% end %>
        <div id="content">
            <%= post[:content] %>
        </div>
    </div>
    <br>
<% end %>
<% end %>
