<% reports = Report.all %>
<% if reports != nil then %> 
<% reports.each do |report| %>
    <% post = Post.find(report.reported_post) %>
    <div id="post">
        <div id="info">
            <a href="#<%= post[:id] %>"><%= post[:id] %></a> <%= post[:created_at] %>
        </div>
        <% if post.media != nil %>
        <div id="media">
            <% imgpiece = post.media.split('.') %>
            <a href='<%= post.media %>'><img src="<%= imgpiece[0]+'.thumb.'+imgpiece[1] %>"/></a>
            <input type="checkbox" name="images[]" value="<%= post.media %>" />
        </div>
        <% end %>
        <div id="content">
            <%= post[:content] %>
            <p class="important"><%= report.content %></p>
        </div>
    </div>
    <br>
<% end %>
<% end %>