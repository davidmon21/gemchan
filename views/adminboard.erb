<% posts = Gemchan::Board.find(Gemchan::ChanController::boards_dict["/#{params[:board]}"]).posts %>
<% if posts != nil then %>
<% posts.each do |post| %>
    <div id="post">
        <div id="info">
            <a href="#<%= post[:id] %>"><%= post[:id] %></a> <%= post[:created_at] %>
        </div>
        <% if post.media != nil %>
        <div id="media">
            <% imgpiece = post.media.split('.') %>
            <a href='<%= post.media %>'><img src="<%= imgpiece[0]+'.thumb.'+imgpiece[1] %>"/></a>
        </div>
        <% end %>
        <div id="content">
            <%= post[:content] %>
        </div>
    </div>
    <br>
<% end %>
<% end %>
